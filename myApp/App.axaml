<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="myApp.App"
             xmlns:local="using:myApp"
             RequestedThemeVariant="Default"
             xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="Styles/AppDefaultStyle.axaml"></StyleInclude>
    </Application.Styles>
    
    <Application.Resources>
        <SolidColorBrush x:Key="PrimaryBackground">#d6d6d6</SolidColorBrush>
        <SolidColorBrush x:Key="BorderBackground">#484848</SolidColorBrush>
        <SolidColorBrush x:Key="ButtonBackground">#1f1f1f</SolidColorBrush>
        <FontFamily x:Key="MontserratAlternates">/Assets/Fonts/Montserrat Alternates.ttf#Montserrat Alternates</FontFamily>
    </Application.Resources>
</Application>