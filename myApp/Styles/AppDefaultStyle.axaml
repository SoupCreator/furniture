<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20" Background="{DynamicResource BorderBackground}" >
            <!-- Add Controls for Previewer Here -->
            <Button Content="Sample Button" Width="390" VerticalContentAlignment="Center" FontSize=""
                    CornerRadius="24" Height="73" />
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
    <Style Selector="Button">
        <Setter Property="Background" Value="{DynamicResource ButtonBackground}"></Setter>
        <Setter Property="CornerRadius" Value="24"></Setter>
        <Setter Property="Foreground" Value="#ededed"></Setter>
        <Setter Property="FontSize" Value="40"></Setter>
    </Style>
    
    <Style Selector="Button:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#302f2f"></Setter>
        <Setter Property="Foreground" Value="White"></Setter>
    </Style>
</Styles>